{% extends 'base.html.j2' %}

{% block title %}
    Pokemon Battle
{% endblock %}

{% block content %}

<form action="{{url_for('main.battle', id=id)}}" method="POST">

<div class="row">
    <div class="col">

        {% if u_poke %}
        <div class="row mt-4">
            <div class="col d-flex justify-content-center">
                <div class="card text-dark bg-warning mb-3">
                    <div class="card-header">{{u_name}}'s Team</div>
                    <div class="card-body">
                        {% for poke in u_poke %}
                        <img src="{{poke.sprite}}">
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        {% endif %}

        <h1  style="display: flex; justify-content: center; align-items: center;">VS</h1>

        {% if o_poke %}
        <div class="row mt-4">
            <div class="col d-flex justify-content-center">
                <div class="card text-dark bg-warning mb-3">
                    <div class="card-header">{{o_name}}'s Team</div>
                    <div class="card-body">
                        {% for poke in o_poke %}
                        <img src="{{poke.sprite}}">
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        {% endif %}

    </div>

    <div class="col">
        <div class="row">
            <div class="col-6" style="margin-top:5%">
                <h6>{{form.icon.label}}</h6>
                {% for subfield in form.icon %}
                    <div class="ms-2">
                    {{subfield}}
                    {{subfield.label | safe }}
                    </div>
                {% endfor %}

                {{form.submit(class="btn btn-secondary form-control mt-4")}}
            </div>
        </div>

        
    </div>

</div>
</form>
{% endblock%}